<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_marginHorizontal="8sp"
    android:layout_marginBottom="6sp"
    android:layout_marginTop="1sp"
    android:clickable="true"
    app:rippleColor="@color/green_active"
    app:cardCornerRadius="15sp"
    app:cardBackgroundColor="#FFFFFF"
    android:elevation="4dp"
    >


    <RelativeLayout
        android:padding="15sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00002E02">

        <TextView
            android:id="@+id/runTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.05"
            android:lines="1"
            android:maxLines="1"
            android:text="00:00:00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/runDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.05"
            android:lines="1"
            android:maxLines="1"
            android:text="Street 20"
            android:textColor="@color/green_active"
            android:textSize="18sp"
            tools:text="Monday" />

        <TextView
            android:id="@+id/runDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/runDay"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.05"
            android:lines="1"
            android:maxLines="1"
            android:textSize="18sp"
            tools:text="01.01.2022" />



    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>