<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_marginHorizontal="8sp"
    android:layout_marginBottom="6sp"
    android:layout_marginTop="1sp"
    android:clickable="true"
    app:rippleColor="@color/green_active"
    app:cardCornerRadius="15sp"
    app:cardBackgroundColor="#FFFFFF"
    android:elevation="4dp"
    android:id="@+id/holder"

    >



    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

       android:background="#00002E02">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvImg"
            android:layout_width="130sp"
            android:layout_margin="5sp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="15sp"
            android:elevation="5sp"
            style="@style/Widget.Material3.CardView.Elevated">

            <ImageView
                android:id="@+id/trackImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/cvImg"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_marginLeft="5sp"
            android:paddingVertical="5sp">


            <TextView
                android:id="@+id/trackTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05"
                android:lines="1"
                android:maxLines="1"
                android:text="Street 20"
                android:textSize="18sp"
                tools:text="Street 20"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/trackLong"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:layout_gravity="bottom"
                android:textSize="12sp"
                tools:text="16km"/>

            <TextView
                android:id="@+id/trackStart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:layout_gravity="bottom"
                android:textSize="12sp"
                tools:text="61-800 Piotrowo 3 PoznaÅ„, Polska"/>








        </LinearLayout>








    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>